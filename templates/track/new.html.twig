{% extends 'base.html.twig' %}

{% block title %}Добавить трек{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="glass-panel p-4 p-lg-5">
                    <div class="d-flex justify-content-between align-items-start gap-3 mb-4">
                        <div>
                            <h1 class="h3 mb-2">Добавление трека</h1>
                            <p class="text-white mb-0">Загрузите аудиофайл, метаданные подтянутся автоматически.</p>
                        </div>
                        <div class="d-flex gap-2">
                            <button type="button" class="btn btn-outline-light" onclick="(function(){var r=document.referrer;try{if(r&&new URL(r).origin===location.origin&&r!==location.href){history.back();return;}}catch(e){}window.location.href='{{ path('home') }}';})();">
                                <i class="bi bi-arrow-left"></i>
                                Назад
                            </button>
                            <a href="{{ path('app_track_index') }}" class="btn btn-outline-light">
                                <i class="bi bi-arrow-left"></i>
                                К списку
                            </a>
                        </div>
                    </div>

                    {{ include('track/_form.html.twig', {'form': form, 'button_label': 'Сохранить трек'}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
